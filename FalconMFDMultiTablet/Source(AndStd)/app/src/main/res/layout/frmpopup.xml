<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
    <ImageView
        android:id="@+id/imgBaslik"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/ustx" />
 
    <ImageView
        android:id="@+id/imgType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/imgGoodBy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgBaslik"
        android:src="@drawable/bos"
        android:visibility="visible" />

/>
 
     <TextView
         android:id="@+id/txtMsg"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/imgGoodBy"
         android:layout_marginTop="20dp"
         android:gravity="center"
         android:text="Msg"
         android:textColor="#FFF"
         android:textSize="14dp" />

     <TextView
         android:id="@+id/txtTitle"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/imgBaslik"
         android:layout_alignRight="@+id/imgBaslik"
         android:layout_alignTop="@+id/imgBaslik"
         android:layout_toRightOf="@+id/imgType"
         android:gravity="center|left"
         android:text="Title"
         android:textColor="#FFF" />

     <Button
         android:id="@+id/dialogButtonOK"
         android:layout_width="100dp"
         android:layout_height="35dp"
         android:layout_below="@+id/txtMsg"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="15dp"
         android:text="Close" />

</RelativeLayout>